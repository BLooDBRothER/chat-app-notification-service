{
  "compilerOptions": {
    "target": "es2016",

    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "resolveJsonModule": true,

    "allowJs": true,
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "*", ".prettierrc.json.js"]
}
